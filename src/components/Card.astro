---
import { BASE_URL } from '../assets/js/constants.js'

interface Props {
  url: string
  text: string
}

const { text, url } = Astro.props
---

<a href={`${BASE_URL}${url}`}>
  <article
    class="h-[100px] bg-dark-gunmetal-blue rounded-xl overflow-hidden relative grid place-items-center hover:scale-[1.01] border border-dark-slate-blue hover:bg-dark-ink-blue hover:text-sky-blue hover:border-sky-blue transition-colors"
  >
    <div class="absolute -top-[40px] -left-[40px]">
      <svg
        class="opacity-[.03] w-[150px] h-auto -rotate-12"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M4 3m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
        ></path><path
          d="M8 7m0 1a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1v1a1 1 0 0 1 -1 1h-6a1 1 0 0 1 -1 -1z"
        ></path><path d="M8 14l0 .01"></path><path d="M12 14l0 .01"></path><path
          d="M16 14l0 .01"></path><path d="M8 17l0 .01"></path><path
          d="M12 17l0 .01"></path><path d="M16 17l0 .01"></path></svg
      >
    </div>

    <p class="p-5 text-center font-[500] text-xl">
      {text ? text : 'no description'}
    </p>
  </article>
</a>


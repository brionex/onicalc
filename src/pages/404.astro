<Layout title="404 page not found">
  <div class="grid h-full place-items-center gap-10 mt-10">
    <p class="text-8xl font-[700]">404</p>
    <p class="text-xl">No se encontro el recurso solicitado.</p>
    <a
      href="/"
      class="bg-dark-slate-blue px-5 py-3 rounded font-[600] hover:bg-sky-blue hover:text-dark-ink-blue"
      >Volver al Inicio</a
    >
  </div>
</Layout>
